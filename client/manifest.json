{
  "name": "Ghosted - Employer Ghosting Tracker",
  "version": "1.0.0",
  "description": "Track and report employer ghosting incidents on major job boards",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "*://*.indeed.com/*",
    "*://*.ziprecruiter.com/*",
    "*://*.monster.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/jobs/*",
        "*://*.indeed.com/viewjob*",
        "*://*.ziprecruiter.com/jobs/*",
        "*://*.monster.com/job-details/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
